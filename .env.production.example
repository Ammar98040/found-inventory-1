# ==========================================
# إعدادات الإنتاج (Production Settings)
# ==========================================

# 1. الأمان
# قم بتوليد مفتاح جديد باستخدام: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-this-to-a-very-long-random-secret-key-for-production

# يجب أن يكون False دائماً في الإنتاج
DEBUG=False

# النطاقات المسموح بها (افصل بينها بفواصل)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,123.45.67.89

# 2. قاعدة البيانات (PostgreSQL)
USE_SQLITE=False
DB_NAME=inventory_db
DB_USER=inventory_user
DB_PASSWORD=strong_db_password
DB_HOST=localhost
DB_PORT=5432

# 3. إعدادات الأمان الإضافية (HTTPS)
# اجعلها True عند تفعيل شهادة SSL
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# 4. أخرى
RESET_PASSWORD=your_secure_reset_password
RATELIMIT_ENABLE=True
